<li>
  <%= course.name %>

  <p>
    <strong>status:</strong>
    <%= course.status %>
  </p>

  <%= link_to t("courses.course.view_detail"), course, class: "btn btn-primary btn-sm" %> 
  
  <%= render @course.reviews %>
  <p>
    <%= link_to t("reviews.new.add"), new_course_review_path(@course) %>
  </p>

  <% if current_user.admin? %>
    <%= link_to t("courses.course.update_course"), edit_course_path(course), class: "btn btn-primary btn-sm"  %> |
    <%= link_to t("courses.course.delete_course"), course, method: :delete,data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
  <% end %>
</li>
