<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.application.title"), "#", id: "logo" %> 
    <nav>
      <ul class="nav navbar-nav navbar-right"> 
        <li><%= link_to t("static_pages.home.homepages"), root_path %></li> 
        <li><%= link_to t("static_pages.help.helppages"), help_path %></li> 
        <li><%= link_to t("static_pages.about.aboutpages"), about_path %></li> 

        <% if logged_in? %>
          <li><%= link_to t("static_pages.users.user"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle", data: {"toggle" =>  "dropdown"}} do %>
              <%= t"static_pages.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.users.profile"), current_user %></li>
              <li><%= link_to t("static_pages.users.settings"), edit_user_path(current_user), class: "glyphicon glyphicon-edit" %></li>
              <li><%= link_to t("static_pages.courses"), courses_path, class: "glyphicon glyphicon-book"%></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.application.logout"), logout_path, class: "glyphicon glyphicon-log-out", method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.application.login"), login_path,class: "glyphicon glyphicon-user" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
